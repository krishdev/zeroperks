<!DOCTYPE html>
<html>
    <head>
        <title><%= category.metaTitle %> | ZEROPERKS</title>
        <link rel="shortcut icon" href="/images/title-logo.png" />
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <meta name="description" content="<%= category.metaDescription %>">
        <meta name="keywords" content="<%= category.keywords %>">
        <%- include('templates/headers') %>
    </head>
    <body>
        <div class="container py-4">
            <%- include('templates/navigation') %>
        </div>
        <div class="container px-4" id="custom-cards">
            
            <div class="container-fluid">
                <div class="row c-Hero">
                    <div class="col-md-8">
                        <h1 class="display-5 fw-bold u-Kaushan"><%= category.title %></h1>
                        <%- category.description.description %>
                    </div>
                    <div class="col-md-4">
                        <img src="<%= aclPort+category.bannerImage.url %>" alt="hero image" style="width: 100%">
                    </div>
                </div>
            </div>
        
            <div class="blog-card row row-cols-1 row-cols-lg-3 align-items-stretch g-4 py-5">
                <% for(let i = 0; i < recentPosts.length; i++) { 
                    const thisPost = recentPosts[i];
                    %>
                <div class="col">
                    <div class="card card-cover h-100 overflow-hidden text-white bg-dark rounded-5 shadow-lg" style="background-image: url('<%= aclPort+thisPost.heroImage.url %>');">
                    <a href="/post/<%= thisPost.url %>/" class="blog-card__link d-flex flex-column h-100 p-5 pb-3 text-white text-shadow-1">
                        <h2 class="mt-5 mb-4 display-6 lh-1 fw-bold blog-card__text"><%= thisPost.title.substring(0,50) %></h2>
                        <ul class="d-flex list-unstyled mt-auto blog-card__text">
                            <li class="me-auto">
                                <span class="author-initial rounded-circle border border-white">K</span>
                            </li>
                            <li class="d-flex align-items-center me-3">
                                <small><%= new Date(thisPost.published_at).toLocaleString() %></small>
                            </li>
                        </ul>
                    </a>
                    </div>
                </div>
                <% } %>
            </div>

            <!-- Pagination -->
             <% if (pages > 0) { %>
                <ul class="pagination text-center">
                    <% if (current == 1) { %>
                        <li class="page-item disabled"><a class="page-link">First</a></li>
                    <% } else { %>
                        <li><a class="page-link" href="/category/<%= category.url %>/1">First</a></li>
                    <% } %>
                    <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                    <% if (i !== 1) { %>
                        <li class="page-item disabled"><a class="page-link">...</a></li>
                    <% } %>
                    <% for (; i <= (Number(current) + 4) && i <= pages; i++) { %>
                        <% if (i == current) { %>
                            <li class="page-item active"><a class="page-link"><%= i %></a></li>
                        <% } else { %>
                            <li><a class="page-link" href="/category/<%= category.url %>/<%= i %>"><%= i %></a></li>
                        <% } %>
                        <% if (i == Number(current) + 4 && i < pages) { %>
                            <li class="page-item disabled"><a class="page-link">...</a></li>
                        <% } %>
                    <% } %>
                    <% if (current == pages) { %>
                        <li class="page-item disabled"><a class="page-link">Last</a></li>
                    <% } else { %>
                        <li><a class="page-link" href="/category/<%= category.url %>/<%= pages %>">Last</a></li>
                    <% } %>
                </ul>
            <% } %>

          </div>
          
          <%- include('templates/footer') %>
    </body>
</html>